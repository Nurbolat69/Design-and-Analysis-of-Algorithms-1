package algorithms;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class MergeSortTest {

    @Test
    public void testSimpleSort() {
        int[] arr = {5, 2, 9, 1, 3};
        MergeSort.sort(arr);
        assertTrue(MergeSort.isSorted(arr));
    }

    @Test
    public void testEmptyArray() {
        int[] arr = {};
        MergeSort.sort(arr);
        assertTrue(MergeSort.isSorted(arr));
    }
}
